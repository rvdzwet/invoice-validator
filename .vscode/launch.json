    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: BouwdepotInvoiceValidator Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/BouwdepotInvoiceValidator/BouwdepotInvoiceValidator.csproj",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views" // Adjust if your views are elsewhere
            }
        }
    ]
}
